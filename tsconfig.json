{
	"compilerOptions": {
		"outDir": "./build/",
		"target": "es6",
		"keyofStringsOnly": true,
		"lib": ["ES2019", "ES2017", "ES2016", "ES2018.Promise", "ES2020", "DOM", "ESNext"],
		"module": "esnext",
		"moduleResolution": "node",
		"removeComments": false,
		"sourceMap": true,
		"jsx": "react-jsx",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"strict": true,
		"resolveJsonModule": true,
		"noEmit": true,
		"baseUrl": "src",
		"paths": {
			"hooks": ["./hooks"],
			"components": ["./components/*"],
			"api": ["./api"],
			"stores": ["./stores/*"],
			"helpers": ["./helpers/*"],
			"styles": ["./styles/*"],
			"util": ["./util/*"],
			"models": ["./models/*"],
			"contexts": ["./contexts/*"]
		},
		"useDefineForClassFields": true
	},
	"exclude": ["node_modules"],
	"include": ["./src/**/*"]
}
