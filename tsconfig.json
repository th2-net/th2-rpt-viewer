{
  "compilerOptions": {
    "outDir": "./build/",
    "target": "es6",
    "keyofStringsOnly": true,
    "lib": [
      "es2019",
      "es2017",
      "es2016",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": true,
    "jsx": "react",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ]
}
