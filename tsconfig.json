{
	"compilerOptions": {
		"outDir": "./build/",
		"target": "es6",
		"keyofStringsOnly": true,
		"lib": ["ES2019", "ES2017", "ES2016", "ES2018.Promise", "ES2020", "DOM", "ESNext", "WebWorker"],
		"module": "esnext",
		"moduleResolution": "node",
		"removeComments": false,
		"sourceMap": true,
		"jsx": "react",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"strict": true,
		"resolveJsonModule": true,
		"noEmit": true,
		"allowJs": true
	},
	"exclude": ["node_modules"],
	"include": ["./src/**/*"]
}
