{
	"compilerOptions": {
		"baseUrl": "src",
		"outDir": "./build/",
		"target": "es6",
		"keyofStringsOnly": true,
		"lib": ["ES2019", "ES2017", "ES2016", "ES2018.Promise", "ES2020", "DOM", "ESNext", "WebWorker"],
		"module": "esnext",
		"moduleResolution": "node",
		"removeComments": false,
		"sourceMap": true,
		"jsx": "react-jsx",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"strict": true,
		"resolveJsonModule": true,
		"noEmit": true,
		"allowJs": true,
		"useUnknownInCatchVariables": false,
		"paths": {
			"helpers": ["helpers/*"],
			"models": ["models/*"],
			"styles": ["styles/*"],
			"stores": ["helpers/*"],
			"api": ["api/*"],
			"components": ["components/*"],
			"hooks": ["hooks/*"],
			"modules": ["modules/*"]
		}
	},
	"exclude": ["node_modules"],
	"include": ["./src/**/*"]
}
